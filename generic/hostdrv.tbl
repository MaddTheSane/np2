// ---- MS-DOSストラクチャー (little endian!)

#pragma pack(push, 1)

/* FindFirst/Next data block */
typedef struct {
	UINT8	drive_no;
	char	srch_mask[11];
	UINT8	attr_mask;
	BYTE	dir_entry_no[2];
	BYTE	dir_sector[2];
	BYTE	f1[4];
} _SRCHREC, *SRCHREC;	//	21bytes (see int214E)

/* Directory entry for 'found' file */
typedef struct {
	BYTE	file_name[11];
	UINT8	file_attr;
	BYTE	f1[10];
	BYTE	file_time[2];
	BYTE	file_date[2];
	BYTE	start_sector[2];
	BYTE	file_size[4];
} _DIRREC, *DIRREC;

/* System File Table entry */
typedef struct {
	BYTE	handle_count[2];
	BYTE	open_mode[2];
	UINT8	file_attr;
	BYTE	dev_info_word[2];
	BYTE 	dev_drvr_ptr[4];
