	BYTE	file_date[2];
	BYTE	file_size[4];
	BYTE	file_pos[4];
	BYTE	rel_sector[2];
	BYTE	abs_sector[2];
	BYTE	dir_sector[2];
	UINT8	dir_entry_no;
	BYTE	file_name[11];
} _SFTREC, *SFTREC;

/* Current Directory Structure */
typedef struct {
	char	current_path[67];
	BYTE	flags[2];
	BYTE	f1[10];
	BYTE	root_ofs[2];
} _CDS3, *CDS3;

